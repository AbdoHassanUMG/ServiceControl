<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{63786CE5-D899-43DF-AD4E-C2CA3BAC3FC2}</ProjectGuid>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <ConfigurationName>Debug</ConfigurationName>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <ConfigurationName>Release</ConfigurationName>
  </PropertyGroup>
  <Target Name="Clean">
    <ItemGroup>
      <FilesToDelete Include="$(SolutionDir)ChocolateyBuild\**\*.*" />
    </ItemGroup>
    <Delete Files="@(FilesToDelete)" />
  </Target>
  <Target Name="Build" DependsOnTargets="ChocolateyBuild" />
  <Target Name="ReBuild" DependsOnTargets="ChocolateyBuild" />
  <UsingTask TaskName="PepitaPackage.CreatePackageTask" AssemblyFile="$(SolutionDir)..\buildsupport\PepitaPackage.dll" />
  <Target Name="ChocolateyBuild" DependsOnTargets="Clean">
    <MakeDir Directories="$(SolutionDir)ChocolateyBuild" />
    <Copy SourceFiles="$(ProjectDir)ServiceControl.install.nuspec" DestinationFolder="$(SolutionDir)ChocolateyBuild" />
    <Copy SourceFiles="$(ProjectDir)chocolateyInstall.ps1" DestinationFolder="$(SolutionDir)ChocolateyBuild\Tools" />
    <PepitaPackage.CreatePackageTask NuGetBuildDirectory="$(SolutionDir)ChocolateyBuild" MetadataAssembly="$(SolutionDir)ServiceControl\bin\$(ConfigurationName)\ServiceControl.dll" />
  </Target>
  <ItemGroup>
    <None Include="chocolateyInstall.ps1" />
    <None Include="ServiceControl.install.nuspec" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="readme.txt" />
  </ItemGroup>
</Project>